汉诺塔问题

#include <stdio.h>
int getNum(int n)
{
	                                    //如果只有一个圆盘，则只需移动一次
	if (n == 1)
		return 1;
	else
		return 2 * getNum(n - 1) + 1;                    //当n>=2时，f(n)=2*f(n-1)+1
	return 0;
}

int main()
{
	int n ;
	int num;
	scanf("%d",&n);
	num = getNum(n);
	printf("汉诺塔中%d片圆盘共需移动%d次\n", n, num);
	return 0;
}


